            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start"
            ],
            "port": 3000,
            "protocol": "inspector",
            "console": "integratedTerminal"
        },
        {
            "name": "Run test",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test"
            ],
            "port": 3001,
            "protocol": "auto",
            "console": "integratedTerminal"
        }
    ]
}